<?xml version = "1.0" encoding = "UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0 //EN"
        "http//mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mybatis.simple.dao.UserMapper">
    <resultMap id="BaseResultMap" type="com.mybatis.simple.model.CountryModel">
        <id column="id" property="id" javaType="INT"/>
        <result column="countryname" property="countryname" javaType="string"/>
        <result column="countrycode" property="countrycode" javaType="string"/>
    </resultMap>

    <sql id="Base_Column">
        id,countryname,countrycode
    </sql>
    <select id="GetAll" resultType="Country">
        SELECT
        <include refid="Base_Column"/>
        FROM country
    </select>

    <select id="GetOne" resultType="Country">
        select
        <include refid="Base_Column"/>
        from country
        <trim prefix="where" prefixOverrides="and">
            <if test="id != null">and id = #{id}</if>
            <if test="countryName != null">and countryName = #{countryName}</if>
            <if test="countryCode != null">and countryCode = #{countryCode}</if>
        </trim>
    </select>

    <insert id="insert" parameterType="com.mybatis.simple.model.CountryModel" useGeneratedKeys="true">
        INSERT INTO
        country
        (countryname,countrycode)
        VALUES
        (#{countryName}, #{countryCode})
    </insert>

    <update id="update" parameterType="com.mybatis.simple.model.CountryModel" >
        UPDATE
        country
        <trim prefix="set" suffixOverrides="," suffix="where id = #{id}">
            <if test="countryName != null">countryName = #{countryName},</if>
            <if test="countryCode != null">countryCode = #{countryCode},</if>
        </trim>
    </update>

    <delete id="delete" parameterType="java.lang.Long" >
        DELETE FROM
        country
        WHERE
        id =#{id}
    </delete>
</mapper>